<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SentiGuard - Security Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    * {
      font-family: 'Inter', sans-serif;
    }

    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
    }

    .glass {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      box-shadow: 0 8px 32px rgba(31, 38, 135, 0.37);
    }

    .sensor-card {
      background: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(8px);
      border: 1px solid rgba(255, 255, 255, 0.15);
      transition: all 0.3s;
    }

    .sensor-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
      background: rgba(255, 255, 255, 0.12);
    }

    @keyframes pulse {

      0%,
      100% {
        opacity: 1;
      }

      50% {
        opacity: 0.5;
      }
    }

    .pulse {
      animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }

    .category-badge {
      display: inline-block;
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 11px;
      font-weight: 600;
      text-transform: uppercase;
    }
  </style>
</head>

<body class="p-4">

  <!-- Header -->
  <div class="glass rounded-2xl p-6 mb-6">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold text-white mb-2">üõ°Ô∏è SentiGuard</h1>
        <p class="text-white/70 text-sm">Advanced Multi-Sensor Security System</p>
      </div>
      <div class="text-right">
        <div class="text-xs text-white/60 uppercase tracking-wide">System Status</div>
        <div id="ws-status" class="text-lg font-semibold text-green-400">Connecting...</div>
        <div id="threat-score" class="text-3xl font-bold text-white mt-2">0%</div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-12 gap-6">

    <!-- Live Feed -->
    <div class="col-span-12 lg:col-span-5">
      <div class="glass rounded-2xl p-6 mb-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-semibold text-white">üìπ Live Feed</h2>
          <div class="flex space-x-2">
            <button onclick="setSource('auto')"
              class="px-3 py-1 text-xs rounded-lg bg-white/20 hover:bg-white/30 text-white transition">Camera</button>
            <button onclick="setSource('sample')"
              class="px-3 py-1 text-xs rounded-lg bg-white/20 hover:bg-white/30 text-white transition">Sample</button>
            <label
              class="px-3 py-1 text-xs rounded-lg bg-white/20 hover:bg-white/30 text-white cursor-pointer transition">
              Upload<input type="file" id="video-upload" class="hidden" accept="video/*" onchange="uploadVideo(this)">
            </label>
          </div>
        </div>
        <div class="relative rounded-xl overflow-hidden shadow-2xl">
          <img id="live-feed" src="" alt="Waiting..." class="w-full h-auto">
          <div id="alarm-badge"
            class="hidden absolute top-4 right-4 px-4 py-2 bg-red-600 text-white font-bold rounded-lg pulse">üö® ALARM
          </div>
        </div>
      </div>

      <!-- Event Log -->
      <div class="glass rounded-2xl p-6">
        <h2 class="text-xl font-semibold text-white mb-4">üìã Recent Events</h2>
        <div id="event-log" class="space-y-2 max-h-64 overflow-y-auto"></div>
      </div>
    </div>

    <!-- All Sensors -->
    <div class="col-span-12 lg:col-span-7 space-y-6">

      <!-- Vision -->
      <div class="glass rounded-2xl p-6">
        <h2 class="text-xl font-semibold text-white mb-4">üëÅÔ∏è Vision (20)</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3" id="vision-sensors"></div>
      </div>

      <!-- Audio -->
      <div class="glass rounded-2xl p-6">
        <h2 class="text-xl font-semibold text-white mb-4">üé§ Audio (15)</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3" id="audio-sensors"></div>
      </div>

      <!-- Behavior -->
      <div class="glass rounded-2xl p-6">
        <h2 class="text-xl font-semibold text-white mb-4">üö∂ Behavior (10)</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3" id="behavior-sensors"></div>
      </div>

      <!-- System -->
      <div class="glass rounded-2xl p-6">
        <h2 class="text-xl font-semibold text-white mb-4">‚öôÔ∏è System (5)</h2>
        <!DOCTYPE html>
